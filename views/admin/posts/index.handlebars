<h1>All posts</h1>
{{#if success_message}}
    <div class="alert alert-success">
        {{success_message}}
    </div>
{{/if}}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>Image</th>
            <th>Category</th>
            <th>STATUS</TH>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td><img height="50" class="img-responsive" src="/uploads/{{image}}" alt=""></td>
            <td>{{category.category}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>